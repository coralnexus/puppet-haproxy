# this config needs haproxy-1.4.19

global
        daemon
        chroot /usr/share/haproxy
        user   <%= user %>
        group  <%= group %>
        node   <%= node %>
        log 127.0.0.1  local0
        log 127.0.0.1  local1 notice
        maxconn <%= max_connections %>
        <%= debug == 'true' ? 'debug' : '' %>
        <%= quiet == 'true' ? 'quiet' : '' %>

defaults
        log     global
        mode    <%= default_mode %>
        retries <%= default_retries %>        
        maxconn <%= default_max_connections %>
<% default_options.each do |option_name, arguments| -%>
        option  <%= option_name -%> <%= arguments.flatten.join(' ') %>
<% end -%>

<% proxies.each do |proxy_name, proxy| -%>
listen <%= proxy_name -%> <%= proxy['ip'] ? proxy['ip'] : '0.0.0.0' -%>:<%= proxy['port'] %>
    mode <%= proxy['mode'] %>
    balance <%= proxy['balance'] %>    
<% proxy['options'].each do |option_name, arguments| -%>
    option  <%= option_name -%> <%= arguments.flatten.join(' ') %>
<% end -%>

<% proxy['servers'].each do |server_name, server| -%>
    server <%= server_name -%> <%= server['ip'] -%>:<%= server['port'] -%> <%= server['settings'].flatten.join(' ') %>
<% end -%>
<% end %>
